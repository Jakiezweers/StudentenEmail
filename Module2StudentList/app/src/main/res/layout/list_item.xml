<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="5dp"
    android:paddingRight="5dp">

    <ImageView
        android:layout_width="95dp"
        android:layout_height="129dp"
        android:text="New Text"
        android:id="@+id/ivStudent"
        android:layout_gravity="top"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/txtNaam"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/ivStudent"
        android:textSize="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/txtStudNr"
        android:layout_below="@+id/txtNaam"
        android:layout_alignEnd="@+id/txtNaam"
        android:layout_toEndOf="@+id/ivStudent"
        android:textSize="20dp"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/txtKlas"
        android:layout_below="@+id/txtStudNr"
        android:layout_alignEnd="@+id/txtStudNr"
        android:layout_toEndOf="@+id/ivStudent"
        android:textSize="20dp"
        android:layout_marginLeft="10dp" />

</RelativeLayout>
